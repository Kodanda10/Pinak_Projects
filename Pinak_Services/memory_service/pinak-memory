#!/bin/bash
# Pinak Memory Command Center Launcher

set -euo pipefail

SCRIPT_PATH="${BASH_SOURCE[0]}"
if [ -z "${PINAK_HOME:-}" ]; then
  if command -v realpath >/dev/null 2>&1; then
    SCRIPT_PATH="$(realpath "$SCRIPT_PATH")"
  else
    SCRIPT_PATH="$(python3 - <<'PY'
import os, sys
print(os.path.realpath(sys.argv[1]))
PY
"$SCRIPT_PATH")"
  fi
  BASE_DIR="$(cd "$(dirname "$SCRIPT_PATH")" && pwd)"
else
  BASE_DIR="$PINAK_HOME"
fi

cd "$BASE_DIR"

SERVER_PORT="${PINAK_BIND_PORT:-8000}"
SERVER_HOST="${PINAK_BIND_HOST:-127.0.0.1}"
VENV_PY="${PINAK_VENV_PY:-$BASE_DIR/.venv/bin/python}"

if [ -z "${PINAK_JWT_SECRET:-}" ]; then
  echo "âš ï¸  PINAK_JWT_SECRET not set. Generating a random secret..."
  export PINAK_JWT_SECRET=$(python3 -c 'import secrets; print(secrets.token_hex(32))')
  echo "ğŸ”‘ Generated Secret: $PINAK_JWT_SECRET"
  echo "ğŸ‘‰ You must use this secret for clients!"
fi
export PINAK_API_URL="${PINAK_API_URL:-http://127.0.0.1:${SERVER_PORT}/api/v1}"
export PINAK_PROJECT_ID="${PINAK_PROJECT_ID:-pinak-memory}"

if [ ! -x "$VENV_PY" ]; then
  echo "âŒ Missing venv python at $VENV_PY"
  echo "Set PINAK_HOME to the repo path or PINAK_VENV_PY to the venv python."
  exit 1
fi

if lsof -iTCP:${SERVER_PORT} -sTCP:LISTEN >/dev/null 2>&1; then
  echo "ğŸŸ¢ Pinak Memory Server already running on port ${SERVER_PORT}."
else
  echo "ğŸŸ¡ Starting Pinak Memory Server..."
  "$VENV_PY" -m uvicorn app.main:app --host "$SERVER_HOST" --port "$SERVER_PORT" > server.log 2>&1 &
  SERVER_PID=$!
  echo "â³ Waiting for neural substrate initialization..."
  sleep 2
  if ! ps -p $SERVER_PID >/dev/null 2>&1; then
    echo "âŒ Server failed to start. Check server.log."
    exit 1
  fi
fi

echo "ğŸš€ Launching Command Center..."
"$VENV_PY" cli/main.py tui
