#!/bin/bash
# Pinak Memory Command Center Launcher

set -euo pipefail

SCRIPT_PATH="${BASH_SOURCE[0]}"
ENV_FILE="${PINAK_ENV_FILE:-$HOME/pinak-memory/pinak.env}"

if [ -f "$ENV_FILE" ]; then
  set -a
  . "$ENV_FILE"
  set +a
fi

if [ -z "${PINAK_HOME:-}" ]; then
  if command -v realpath >/dev/null 2>&1; then
    SCRIPT_PATH="$(realpath "$SCRIPT_PATH")"
  else
    SCRIPT_PATH="$(python3 - <<'PY'
import os, sys
print(os.path.realpath(sys.argv[1]))
PY
"$SCRIPT_PATH")"
  fi
  BASE_DIR="$(cd "$(dirname "$SCRIPT_PATH")" && pwd)"
else
  BASE_DIR="$PINAK_HOME"
fi

if [ ! -f "$BASE_DIR/app/main.py" ] && [ -n "${PINAK_HOME:-}" ]; then
  BASE_DIR="$PINAK_HOME"
fi

cd "$BASE_DIR"

SERVER_PORT="${PINAK_BIND_PORT:-8000}"
SERVER_HOST="${PINAK_BIND_HOST:-127.0.0.1}"
VENV_PY="${PINAK_VENV_PY:-$BASE_DIR/.venv/bin/python}"

export PINAK_JWT_SECRET="${PINAK_JWT_SECRET:-secret}"
export PINAK_API_URL="${PINAK_API_URL:-http://127.0.0.1:${SERVER_PORT}/api/v1}"
export PINAK_PROJECT_ID="${PINAK_PROJECT_ID:-pinak-memory}"

if [ ! -x "$VENV_PY" ]; then
  echo "‚ùå Missing venv python at $VENV_PY"
  echo "Set PINAK_HOME to the repo path or PINAK_VENV_PY to the venv python."
  exit 1
fi

if ! "$VENV_PY" - <<'PY' >/dev/null 2>&1
import importlib
importlib.import_module("textual")
PY
then
  echo "‚ùå Missing Python dependencies (textual not found)."
  echo "Run: $VENV_PY -m pip install -e ."
  exit 1
fi

if lsof -iTCP:${SERVER_PORT} -sTCP:LISTEN >/dev/null 2>&1; then
  echo "üü¢ Pinak Memory Server already running on port ${SERVER_PORT}."
else
  echo "üü° Starting Pinak Memory Server..."
  "$VENV_PY" -m uvicorn app.main:app --host "$SERVER_HOST" --port "$SERVER_PORT" > server.log 2>&1 &
  SERVER_PID=$!
  echo "‚è≥ Waiting for neural substrate initialization..."
  sleep 2
  if ! ps -p $SERVER_PID >/dev/null 2>&1; then
    echo "‚ùå Server failed to start. Check server.log."
    exit 1
  fi
fi

if [ $# -gt 0 ]; then
  "$VENV_PY" -m cli.main "$@"
  exit $?
fi

echo "üöÄ Launching Command Center..."
"$VENV_PY" cli/main.py tui
