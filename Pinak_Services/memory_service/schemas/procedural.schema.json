{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ProceduralMemory",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "schema_version": {"type": "string"},
    "skill_name": {"type": "string", "minLength": 1, "maxLength": 1024},
    "steps": {"type": "array", "items": {"type": "string", "maxLength": 4096}, "maxItems": 100},
    "description": {"type": "string", "maxLength": 65536},
    "trigger": {"type": "string", "maxLength": 1024},
    "code_snippet": {"type": "string", "maxLength": 65536}
  },
  "required": ["skill_name", "steps"]
}
